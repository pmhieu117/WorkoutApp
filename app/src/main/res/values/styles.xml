<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#4CAF50</item>
        <item name="fontFamily">@font/utm_neo_sans_intel</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_horizontal</item>
        <item name="android:mirrorForRtl">true</item>
    </style>

    <style name="DatePickerStyle" parent="AppTheme">
        <item name="android:textSize">@dimen/number_picker_text_size</item>
        <item name="android:textColorPrimary">#E91E63</item>
        <item name="android:textStyle">bold</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="TimePickerStyle" parent="AppTheme">
        <item name="android:textSize">@dimen/number_picker_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="NumberPickerStyle" parent="AppTheme">
        <item name="android:textSize">@dimen/number_picker_text_size</item>
        <item name="android:textColorPrimary">#E91E63</item>
        <item name="android:textStyle">bold</item>
        <item name="colorPrimaryDark">#212022</item>
    </style>

    <style name="TextItemBottomNavigationViewActive" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextItemBottomNavigationViewInactive" parent="AppTheme">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextStyle" parent="AppTheme">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:background">@drawable/rounded_gray_view</item>
        <item name="android:layout_width">@dimen/_200sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:padding">@dimen/_7sdp</item>
    </style>

    <style name="TextViewStyleBlack" parent="AppTheme">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextViewStyleWhite" parent="AppTheme">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="RoundButton" parent="AppTheme">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#FFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoundTransparentButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">#FFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- blank styles for better code readability-->
    <style name="TextAppearance"/>
    <style name="TextAppearance.BottomNavigationView"/>
</resources>